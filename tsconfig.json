{
  "compilerOptions": {
    "module": "System",
    "target": "ES5",
    "lib": ["es5", "es2015.promise","DOM"],
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outFile": "./bundle.js",
    "sourceMap": true,
    "experimentalDecorators": true
  },
  "include": [
    "**/*.ts"
  ],

  "exclude": [
    "node_modules"
  ]
}